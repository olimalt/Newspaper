<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.newspaper.ui.actualite.ActualiteFragment"
        android:label="@string/title_articles"
        tools:layout="@layout/fragment_actualite" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.newspaper.ui.recherche.RechercheFragment"
        android:label="@string/title_recherche"
        tools:layout="@layout/fragment_recherche" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.newspaper.ui.notifications.NotificationsFragment"
        android:label="@string/title_articles"
        tools:layout="@layout/fragment_notifications" />
</navigation>